{
  "name": "viral-ngs-input-validator",
  "title": "viral-ngs-input-validator",
  "summary": "Accepts paired-end reads as either paired FASTQ files or an unmapped BAM; produces an unmapped BAM.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "file",
      "class": "file",
      "patterns": ["*.fastq.gz", "*.bam"],
      "help": "Either a .fastq.gz or unmapped .bam file"
    },
    {
      "name": "paired_fastq",
      "class": "file",
      "patterns": ["*.fastq.gz"],
      "optional": true,
      "help": "A .fastq.gz file containing the mate pairs, if the first file is a .fastq.gz."
    },
    {
      "name": "novocraft_tarball",
      "class": "file",
      "patterns": ["novocraftV3.*.Linux*.tar.gz"]
    },
    {
      "name": "gatk_tarball",
      "class": "file",
      "patterns": ["GenomeAnalysisTK-*.tar.bz2"]
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "unmapped_bam",
      "class": "file",
      "patterns": ["*.bam"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem2_ssd1_x2"
      }
    },
    "execDepends": [
      {"name": "default-jre-headless"}
    ]
  },
  "authorizedUsers": []
}
