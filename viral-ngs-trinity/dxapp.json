{
  "name": "viral-ngs-trinity",
  "title": "viral-ngs-trinity",
  "summary": "Run the Trinity assembler, preceded by read trimming, deduplication, and subsampling",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "reads",
      "class": "file",
      "patterns": ["*.unmapped.filtered.bam", "*.bam"]
    },
    {
      "name": "contaminants",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "subsample",
      "help": "Subsample the Trinity input to no more than this many read pairs",
      "class": "int",
      "default": 100000
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "subsampled_reads",
      "class": "file",
      "patterns": ["*.bam", "*.subsamp.bam"]
    },
    {
      "name": "subsampled_read_pair_count",
      "class": "int"
    },
    {
      "name": "subsampled_base_count",
      "class": "int"
    },
    {
      "name": "contigs",
      "class": "file",
      "patterns": ["*.fasta", "*.assemble1-trinity.fasta"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/viral-ngs-trinity.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem2_ssd1_x2"
      }
    },
    "execDepends": [
      {"name": "openjdk-6-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
