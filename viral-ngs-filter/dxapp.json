{
  "name": "viral-ngs-filter",
  "title": "viral-ngs-filter",
  "summary": "Restrict input reads to those that align to a target database",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "reads",
      "class": "file",
      "patterns": ["*.bam"],
      "help": "reads"
    },
    {
      "name": "targets",
      "help": "Target sequence database (FASTA)",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "min_base_count",
      "help": "Fail the analysis if the sum of the length of all surviving reads is below this",
      "class": "int",
      "default": 0
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "filtered_reads",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "prefiltration_read_count",
      "class": "int"
    },
    {
      "name": "prefiltration_base_count",
      "class": "int"
    },
    {
      "name": "filtered_read_count",
      "class": "int"
    },
    {
      "name": "filtered_base_count",
      "class": "int"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/viral-ngs-filter.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem3_hdd2_x4"
      }
    },
    "execDepends": [
      {"name": "default-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"}
    ]
  },
  "authorizedUsers": []
}
