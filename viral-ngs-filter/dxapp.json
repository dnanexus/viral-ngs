{
  "name": "viral-ngs-filter",
  "title": "viral-ngs-filter",
  "summary": "Restrict paired-end input reads to those that align to a target database",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "reads",
      "class": "file",
      "patterns": ["*.bam"],
      "help": "reads"
    },
    {
      "name": "targets",
      "help": "Target sequence database (FASTA)",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "min_read_pairs",
      "help": "Fail the analysis if fewer than n read pairs survive filtering",
      "class": "int",
      "default": 0
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    },
    {
      "name": "read_id_regex",
      "class": "string",
      "label": "Read ID Regex",
      "help": "Perl regular expression to parse paired read IDs from the FASTQ files",
      "optional": true,
      "suggestions": ["^@(\\S+)/[1|2]$", "^@(\\S+).[1|2] .*"]
    }
  ],
  "outputSpec": [
    {
      "name": "filtered_reads",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "unfiltered_read_pair_count",
      "class": "int"
    },
    {
      "name": "unfiltered_base_count",
      "class": "int"
    },
    {
      "name": "filtered_read_pair_count",
      "class": "int"
    },
    {
      "name": "filtered_base_count",
      "class": "int"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/viral-ngs-filter.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem2_ssd1_x2"
      }
    },
    "execDepends": [
      {"name": "default-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
