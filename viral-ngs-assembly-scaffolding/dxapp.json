{
  "name": "viral-ngs-assembly-scaffolding",
  "title": "viral-ngs-assembly-scaffolding",
  "summary": "Reference-guided scaffolding of Trinity contigs",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "trinity_contigs",
      "class": "file",
      "patterns": ["*.trinity.fasta"]
    },
    {
      "name": "trinity_reads",
      "help": "Reads given to Trinity",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "reference_genome",
      "class": "file",
      "patterns": ["*.fasta"]
    },
    {
      "name": "name",
      "help": "name for the sample/assembly (guessed from the filename by default)",
      "class": "string",
      "optional": true
    },
    {
      "name": "min_length",
      "help": "Fail if the assembly is below this length",
      "class": "int",
      "default": 15000
    },
    {
      "name": "min_unambig",
      "help": "Fail if the assembly has less than this proportion of non-N bases",
      "class": "float",
      "default": 0.95
    },
    {
      "name": "replace_length",
      "help": "length of assembly ends to be replaced with reference",
      "class": "int",
      "default": 55
    },
    {
      "name": "resources",
      "class": "file",
      "patterns": ["viral-ngs-*.resources.tar.gz"]
    },
    {
      "name": "novocraft_tarball",
      "class": "file",
      "patterns": ["novocraftV3.*.Linux*.tar.gz"]
    },
    {
      "name": "gatk_tarball",
      "class": "file",
      "patterns": ["GenomeAnalysisTK-*.tar.bz2"]
    }
  ],
  "outputSpec": [
    {
      "name": "modified_scaffold",
      "class": "file",
      "patterns": ["*.scaffold.fasta", "*.fasta"]
    },
    {
      "name": "vfat_scaffold",
      "class": "file",
      "patterns": ["*.fasta"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/code.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x4"
      }
    },
    "execDepends": [
      {"name": "default-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
